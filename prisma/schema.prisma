generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// * User related schemas -----------------------------------------------------------------------------------------------------

model User {
  id                Int      @id @default(autoincrement())
  email             String   @unique
  username          String
  token             String
  verified          Boolean
  role              String
  confirmationToken String?  @unique
  profile           Profile?
  eventCode         String?
  managingEvents    Event[]
}

model Profile {
  id        Int    @id @default(autoincrement())
  user      User?  @relation(fields: [userID], references: [id])
  firstName String
  lastName  String
  age       String
  userID    Int?   @unique
}

model Event {
  id            Int    @id @default(autoincrement())
  eventCode     String @unique
  eventName     String
  eventDate     String
  eventLocation String
  eventManager  User?  @relation(fields: [userId], references: [id])
  userId        Int?
}

model Guest {
  id            Int     @id @default(autoincrement())
  participateTo String
  firstName     String
  lastName      String
  email         String
  phoneNumber   String
  location      String
  vegan         Boolean
  accomodation  Boolean
  kids          Boolean
}

model Kid {
  id  Int @id @default(autoincrement())
  age Int
}

// * End * user related schemas -----------------------------------------------------------------------------------------------------
